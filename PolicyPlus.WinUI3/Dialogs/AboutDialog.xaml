<ContentDialog
    x:Class="PolicyPlus.WinUI3.Dialogs.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About Policy++"
    PrimaryButtonText="OK"
    DefaultButton="Primary"
    MinWidth="420">
    <StackPanel Spacing="8">
        <TextBlock x:Name="AppTitle" FontSize="20" FontWeight="SemiBold" />
        <TextBlock x:Name="VersionText" />
        <TextBlock x:Name="CommitText" />
        <TextBlock TextWrapping="Wrap" Text="Derived from the original PolicyPlus project (CC-BY-4.0)."/>
        <RichTextBlock x:Name="LinksBlock" IsTextSelectionEnabled="True">
            <Paragraph>
                <Run Text="Original: "/>
                <Hyperlink x:Name="OriginalLink" NavigateUri="https://github.com/Fleex255/PolicyPlus">
                    <Run Text="https://github.com/Fleex255/PolicyPlus" />
                </Hyperlink>
            </Paragraph>
            <Paragraph>
                <Run Text="Modified: "/>
                <Hyperlink x:Name="ModifiedLink" NavigateUri="https://github.com/tttza/PolicyPlusMod">
                    <Run Text="https://github.com/tttza/PolicyPlusMod" />
                </Hyperlink>
            </Paragraph>
        </RichTextBlock>
        <TextBlock TextWrapping="Wrap" Text="License: Creative Commons Attribution 4.0 International (CC BY 4.0)"/>
    </StackPanel>
</ContentDialog>