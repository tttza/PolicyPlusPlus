<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="PolicyPlus.WinUI3.Dialogs.ImportRegDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Import .reg"
    PrimaryButtonText="Apply"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    MinWidth="520">
    <StackPanel Spacing="12">
        <TextBlock Text="Choose .reg file and root key, then preview parsed content."/>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBox x:Name="RegPath" Width="360" PlaceholderText="Select a .reg file..." IsReadOnly="True"/>
            <Button Content="Browse..." Click="Browse_Click"/>
        </StackPanel>
        <ComboBox x:Name="RootSelector" Width="260">
            <ComboBoxItem Content="HKEY_LOCAL_MACHINE"/>
            <ComboBoxItem Content="HKEY_CURRENT_USER"/>
            <ComboBoxItem Content="HKEY_USERS"/>
        </ComboBox>
        <Button Content="Preview" Click="Preview_Click"/>
        <TextBox x:Name="PreviewBox" AcceptsReturn="True" TextWrapping="Wrap" Height="240" IsReadOnly="True"/>
    </StackPanel>
</ContentDialog>