<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PolicyPlus.WinUI3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PolicyPlus.WinUI3"
    xmlns:core="using:PolicyPlus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="PolicyPlus">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" Background="{ThemeResource WindowBackground}" Loaded="Window_Loaded">
    <StackPanel Spacing="12" Padding="16" MinWidth="1024" MinHeight="600">
            <TextBlock Text="PolicyPlus (WinUI 3 preview shell)" FontSize="18" />

            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="Theme:" VerticalAlignment="Center" />
                <ComboBox x:Name="ThemeSelector" Width="120" SelectionChanged="ThemeSelector_SelectionChanged">
                    <ComboBoxItem Content="Dark" IsSelected="True" />
                    <ComboBoxItem Content="Light" />
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="BtnLoadLocalGpo" Content="Load Local GPO (Computer)" Click="BtnLoadLocalGpo_Click" />
                <TextBlock x:Name="LoaderInfo" VerticalAlignment="Center" />
            </StackPanel>

            <TextBlock Text="Dark Mode is currently applied via element theme override." Opacity="0.7" />

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="BtnLoadAdmxFolder" Content="Load ADMX Folder" Click="BtnLoadAdmxFolder_Click" />
                <TextBlock x:Name="PolicyCount" VerticalAlignment="Center" />
                <TextBlock Text="  |  " VerticalAlignment="Center" />
                <TextBlock Text="Applies to:" VerticalAlignment="Center" />
                <ComboBox x:Name="AppliesToSelector" Width="140" SelectionChanged="AppliesToSelector_SelectionChanged">
                    <ComboBoxItem Content="Both" IsSelected="True" />
                    <ComboBoxItem Content="Computer" />
                    <ComboBoxItem Content="User" />
                </ComboBox>
                <TextBlock Text="  |  " VerticalAlignment="Center" />
                <TextBlock x:Name="LoadErrors" VerticalAlignment="Center" />
            </StackPanel>

            <TextBox x:Name="SearchBox" PlaceholderText="Search policies..." TextChanged="SearchBox_TextChanged" />
            <Button x:Name="BtnClearCategory" Content="Clear category filter" Click="ClearCategoryFilter_Click" HorizontalAlignment="Left" />

            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TreeView x:Name="CategoryTree" Grid.Column="0" SelectionMode="Single" ItemInvoked="CategoryTree_ItemInvoked">
                    <TreeView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Content.DisplayName}" />
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
                <Grid Grid.Column="1" />
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ListView x:Name="PolicyList" Grid.Row="0" DisplayMemberPath="DisplayName" SelectionChanged="PolicyList_SelectionChanged" />
                    <Border Grid.Row="1" Margin="0,8,0,0" Padding="12" Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}" CornerRadius="4">
                        <StackPanel Spacing="4">
                            <TextBlock x:Name="DetailTitle" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock x:Name="DetailId" Opacity="0.8"/>
                            <TextBlock x:Name="DetailCategory" Opacity="0.8"/>
                            <TextBlock x:Name="DetailApplies" Opacity="0.8"/>
                            <TextBlock x:Name="DetailSupported" Opacity="0.8"/>
                            <TextBlock x:Name="DetailExplain" TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
