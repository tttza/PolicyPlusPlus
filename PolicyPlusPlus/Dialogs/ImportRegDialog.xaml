<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
  x:Class="PolicyPlusPlus.Dialogs.ImportRegDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Import .reg"
  PrimaryButtonText="Apply"
  CloseButtonText="Cancel"
  DefaultButton="Primary"
  MinWidth="520"
  AllowDrop="True"
  DragOver="Dialog_DragOver"
  Drop="Dialog_Drop"
>
  <StackPanel Spacing="12">
    <StackPanel Spacing="2">
      <TextBlock Text="Choose or drag &amp; drop a .reg file onto this dialog." />
    </StackPanel>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBox
        x:Name="RegPath"
        Width="360"
        PlaceholderText="Select a .reg file..."
        IsReadOnly="True"
      />
      <Button Content="Browse..." Click="Browse_Click" />
    </StackPanel>
    <ToggleSwitch
      x:Name="OnlyPoliciesSwitch"
      Header="Keep only policy-related keys (recommended)"
      IsOn="True"
    />
    <StackPanel Spacing="4">
      <TextBlock Text="Import mode" />
      <StackPanel Orientation="Horizontal" Spacing="24">
        <RadioButton
          x:Name="MergeModeRadio"
          Content="Merge"
          IsChecked="True"
          GroupName="ImportMode"
        />
        <RadioButton x:Name="ReplaceModeRadio" Content="Replace" GroupName="ImportMode" />
      </StackPanel>
      <TextBlock Text="Merge: keep existing pending changes and add differences. Replace: discard all existing pending changes and policy settings before queuing imported policies." />
    </StackPanel>
    <TextBox
      x:Name="PreviewBox"
      AcceptsReturn="True"
      TextWrapping="Wrap"
      Height="320"
      IsReadOnly="True"
      ScrollViewer.VerticalScrollBarVisibility="Auto"
      ScrollViewer.VerticalScrollMode="Enabled"
    />
  </StackPanel>
</ContentDialog>
