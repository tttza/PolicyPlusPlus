<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="PolicyPlusPlus.Dialogs.ImportRegDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Import .reg"
    PrimaryButtonText="Apply"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    MinWidth="520">
    <StackPanel Spacing="12">
        <TextBlock Text="Choose .reg file. Root hive will be detected automatically."/>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBox x:Name="RegPath" Width="360" PlaceholderText="Select a .reg file..." IsReadOnly="True"/>
            <Button Content="Browse..." Click="Browse_Click"/>
        </StackPanel>
        <TextBox x:Name="PreviewBox"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Height="320"
                 IsReadOnly="True"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollMode="Enabled"/>
    </StackPanel>
</ContentDialog>