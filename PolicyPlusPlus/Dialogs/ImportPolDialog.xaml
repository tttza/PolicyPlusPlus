<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="PolicyPlusPlus.Dialogs.ImportPolDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Import .pol"
    PrimaryButtonText="Open"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    MinWidth="520">
    <StackPanel Spacing="12">
        <TextBlock Text="Choose a .pol file to open and preview."/>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBox x:Name="PolPath" Width="360" PlaceholderText="Select a .pol file..." IsReadOnly="True"/>
            <Button Content="Browse..." Click="Browse_Click"/>
        </StackPanel>
        <Button Content="Preview" Click="Preview_Click"/>
        <TextBox x:Name="PreviewBox" AcceptsReturn="True" TextWrapping="Wrap" Height="260" IsReadOnly="True"/>
    </StackPanel>
</ContentDialog>