<ContentDialog
  x:Class="PolicyPlusPlus.Dialogs.ExportRegDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Export REG"
  PrimaryButtonText="Export"
  SecondaryButtonText="Cancel"
>
  <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,* ,Auto" Padding="12" MinWidth="420">
    <TextBlock
      Grid.Row="0"
      Grid.Column="0"
      Margin="0,0,8,8"
      VerticalAlignment="Center"
      Text="Source branch (optional)"
    />
    <TextBox
      x:Name="TextBranch"
      Grid.Row="0"
      Grid.Column="1"
      Margin="0,0,8,8"
      PlaceholderText="(blank to export all)"
    />
    <TextBlock
      Grid.Row="1"
      Grid.Column="0"
      Margin="0,0,8,0"
      VerticalAlignment="Center"
      Text="REG file"
    />
    <TextBox x:Name="TextReg" Grid.Row="1" Grid.Column="1" Margin="0,0,8,0" />
    <Button Grid.Row="1" Grid.Column="2" Content="Browse" Click="Browse_Click" />
  </Grid>
</ContentDialog>
