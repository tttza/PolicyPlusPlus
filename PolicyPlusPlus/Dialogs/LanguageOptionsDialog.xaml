<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
  x:Class="PolicyPlusPlus.Dialogs.LanguageOptionsDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Language options"
  PrimaryButtonText="Apply"
  CloseButtonText="Cancel"
  DefaultButton="Primary"
  MinWidth="460"
  AutomationProperties.Name="Language options dialog"
>
  <StackPanel Spacing="12">
    <TextBlock Text="Choose display language for ADMX policy text." />
    <ComboBox
      x:Name="PrimaryLanguageSelector"
      Width="240"
      AutomationProperties.Name="Primary language selector"
    />
    <CheckBox
      x:Name="PrimaryFallbackEnabled"
      Content="Enable fallback for primary language (OS / en / else)"
      AutomationProperties.Name="Enable primary language fallback"
    />
    <StackPanel Spacing="8">
      <CheckBox
        x:Name="SecondLanguageEnabledChk"
        Content="Enable 2nd language (for alternate texts)"
        AutomationProperties.Name="Enable second language"
      />
      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="2nd Language:" VerticalAlignment="Center" />
        <ComboBox
          x:Name="SecondLanguageSelectorBox"
          Width="200"
          IsEnabled="False"
          AutomationProperties.Name="Second language selector"
        />
      </StackPanel>
    </StackPanel>
  </StackPanel>
</ContentDialog>
